<div class="container">
  <div class="card">

    <div class="form">
      <%= simple_form_for @user, url: user_path(@user), method: :patch do |f| %>
        <%= f.input :name, label: 'Username:', required: true%>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.input :password,
                    label: "New password",
                        autofocus: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                        label: "Confirm your new password",
                        input_html: { autocomplete: "new-password" } %>
      <%= f.button :submit, value: 'Update name', "data-disable-with" => "Creating..", class: "btn btn-outline-primary" %></p>
      <% end %>
          <%= link_to "Delete account", @user, method: :delete, data: { confirm: 'WARNING you will delete an entire Project!', disable_with: 'loading...' } %> </div>
  </div>
</div>
