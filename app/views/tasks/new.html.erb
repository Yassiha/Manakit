<br>
<div class="container">
  <div class="form">
    <%= simple_form_for @task, url: project_mission_tasks_path, method: :post do |f| %>
      <h2>New task</h2>
      <%= f.input :title, label: 'Titre:', required: true %>
      <%= f.input :description, label: 'Description:', :input_html => { :rows => 7 , :style => 'width: 100%'} %>
      <%= f.input :start_date, label: 'Start-date' %>
      <%= f.input :due_date, label: 'End-date ' %>
      <%= f.input :priority, label: 'Priority', collection: ['High', 'Moderate', 'Low'], default: 'Moderate' %>
      <button type="button" class="btn btn-outline-primary">
        <%= f.button :submit, value: 'Add task', "data-disable-with" => "Creating.." %>
      </button>
    <% end %>
  </div>
</div>
